@model IEnumerable<Repuestos2023MVC.Web.ViewModels.RepuestoProveedorVm>
@{
    ViewData["Title"] = "Index";
}

<div class="container">


    <div class="row">
        <div class="col-6">
            <h2>Lista de repuestos y sus respectivos proveedores</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="RepuestoProveedor" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nuevo registro
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Repuesto</th>
                <th>Proveedor</th>
                <th style="width:25%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td><img src="/images/repuestos/@item.Repuesto.Imagen" alt="Category Image" style="max-width: 70px; max-height: 70px;"></td>
                        <td>@item.Repuesto.Descripcion</td>
                        <td>@item.Proveedor.NombreProveedor</td>
                        <td>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="RepuestoProveedor" asp-action="Delete" asp-route-id="@item.id">
                                <i class="bi bi-trash3"></i> &nbsp;
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        No hay registros aún :(
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


