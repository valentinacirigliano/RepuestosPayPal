@using Repuestos2023MVC.Web.ViewModels;
@model RepuestoProveedorVm
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-area="Admin" asp-controller="RepuestoProveedor" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Eliminar registro</h2>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Proveedor.NombreProveedor" class="form-label"></label>
            <input asp-for="Proveedor.NombreProveedor" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Repuesto.Descripcion" class="form-label"></label>
            <input asp-for="Repuesto.Descripcion" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:200px">
            <i class="bi bi-floppy"></i> &nbsp;

            Borrar
        </button>

        <a asp-controller="RepuestoProveedor" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;

            Volver
        </a>

    </div>
</form>
