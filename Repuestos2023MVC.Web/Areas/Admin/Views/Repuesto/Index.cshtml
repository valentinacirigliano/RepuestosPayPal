@using Repuestos2023MVC.Web.ViewModels;
@model IEnumerable<RepuestoListVm>;
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/css/estilos.css">

<div class="container">
    <div class="row w-90">
        <div class="col-6">
            <h2>Lista de Repuestos</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Repuesto" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nuevo Repuesto
            </a>
        </div>
    </div>
    <table id="tblRepuestos" class="table table-bordered w-90">
        <thead>
            <tr>
                
                <th>Descripcion</th>
                <th>Stock</th>
                <th>Categoria</th>
                <th>PrecioLista</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</div>



@section Scripts{
    <script src="~/js/repuesto.js"></script>
   
}



