@using Repuestos2023.Models.Models;
@model Provincia
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Provincia" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Provincia</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:200px">
            <i class="bi bi-floppy"></i> &nbsp;

            Borrar
        </button>
        <a asp-controller="Provincia" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;

            Volver
        </a>

    </div>
</form>
