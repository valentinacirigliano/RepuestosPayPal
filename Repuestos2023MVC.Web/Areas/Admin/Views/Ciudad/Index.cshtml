@model IEnumerable<Repuestos2023MVC.Web.ViewModels.CiudadEditVm>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row w-75">
        <div class="col-6">
            <h2>Lista de Ciudades</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ciudad" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nueva Ciudad
            </a>
        </div>
    </div>
    
    <table class="table table-bordered table-striped w-75">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Provincia</th>
                <th style="width=25%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Provincia.Nombre</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Ciudad" asp-action="Edit" asp-route-id="@item.CiudadId">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Edit
                            </a>
                            <a class="btn btn-danger" asp-controller="Ciudad" asp-action="Delete" asp-route-id="@item.CiudadId">
                                <i class="bi bi-trash3"></i> &nbsp;
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        No hay ciudades aun
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


