@using Repuestos2023MVC.Web.ViewModels
@model Repuestos2023.Models.Models.Proveedor
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Proveedor" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">New Supplier</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreProveedor" class="form-label"></label>
            <input asp-for="NombreProveedor" class="form-control" />
            <span asp-validation-for="NombreProveedor" class="text-danger"></span>
        </div>
        

        <div class="mb-3">
            <label asp-for="ProvinciaId" class="form-label"></label>
            <select asp-for="ProvinciaId" asp-items="@Model.ProvinciasLista" class="form-select" id="ProvinciaId">
                <option disabled selected>&nbsp;--Seleccione Provincia--</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="CiudadId" class="form-label"></label>
            <select asp-for="CiudadId" asp-items="@Model.CiudadesLista" class="form-select" id="CiudadId">
                <option disabled selected>&nbsp;--Seleccione Ciudad--</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Direccion" class="form-label"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px">
            <i class="bi bi-floppy"></i> &nbsp;
            Save
        </button>
        <a asp-controller="Proveedor" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;
            Back to List
        </a>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
        
        <script type="text/javascript">
        var Url = '@Url.Action("GetCities", "Admin/Generico")';
    </script>
        <script src="~/js/ciudades.js"></script>
    }
}