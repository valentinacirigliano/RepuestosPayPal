@model ShoppingCart
@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <input hidden asp-for="@Model.RepuestoId"/>
    <div class="card  container pt-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-40">@Model.Repuesto.Descripcion</h1>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-info pt-2" style="height:30px;">@Model.Repuesto.Categoria.NombreCategoria</span>
            </div>
        </div><li class="nav-item">
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="nav-link">
                                <i class="bi bi-cart4"></i>
                            </a>

                        </li>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price: <strike>@Model.Repuesto.PrecioLista</strike></h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>Cantidad</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Precio</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Repuesto.PrecioUnitario</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Repuesto.Precio50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>@Model.Repuesto.Precio100</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Html.Raw(@Model.Repuesto.Descripcion)</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-3 text-primary"><h4>Cantidad</h4></div>
                            <div class="col-10">
                                <input class="form-control" asp-for="@Model.Cantidad"/>    
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Repuesto.Imagen" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Volver al inicio</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Agregar al carrito</button>
                </div>
            </div>
        </div>
    </div>
</form>
