@using Repuestos2023MVC.Web.ViewModels
@model CiudadEditVm
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Ciudad" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">New City</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProvinciaId"></label>
            <select asp-for="ProvinciaId" asp-items="@Model.Provincias" class="form-select">
                <option disabled selected>-- Seleccionar Provincia --</option>
            </select>
            <span asp-validation-for="ProvinciaId" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:200px">
            <i class="bi bi-floppy"></i> &nbsp;
            Save
        </button>
        <a asp-controller="Ciudad" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;
            Back to List
        </a>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}